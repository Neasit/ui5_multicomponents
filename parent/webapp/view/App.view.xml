<mvc:View
  controllerName="app.parent.controller.App"
  xmlns:html="http://www.w3.org/1999/xhtml"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:tnt="sap.tnt"
  xmlns:core="sap.ui.core"
>
  <tnt:ToolPage id="idToolPageMain">
    <tnt:header>
      <tnt:ToolHeader>
        <Button
          icon="sap-icon://menu2"
          press="onSideNavButtonPress"
          type="Transparent"
          tooltip="{i18n>tooltipMenuNavigationButton}"
        />
      </tnt:ToolHeader>
    </tnt:header>
    <tnt:sideContent>
      <tnt:SideNavigation
        expanded="true"
        selectedKey="{appModel>/currentPosition/key}"
        itemSelect="onItemSelect"
      >
        <tnt:NavigationList items="{path: 'appModel>/navigationItems'}">
          <tnt:NavigationListItem
            text="{appModel>title}"
            icon="{appModel>icon}"
            enabled="{appModel>enabled}"
            expanded="{appModel>expanded}"
            items="{appModel>items}"
            key="{appModel>key}"
          >
            <tnt:NavigationListItem
              text="{appModel>title}"
              key="{appModel>key}"
              enabled="{appModel>enabled}"
            >
            </tnt:NavigationListItem>
          </tnt:NavigationListItem>
        </tnt:NavigationList>
      </tnt:SideNavigation>
    </tnt:sideContent>
    <tnt:mainContents>
      <App id="parent" />
    </tnt:mainContents>
  </tnt:ToolPage>
</mvc:View>